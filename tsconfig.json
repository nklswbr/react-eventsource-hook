{
    "compilerOptions": {
      "target": "ES2019",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "strict": true,
      "declaration": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react-jsx",
      "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}